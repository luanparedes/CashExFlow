<MainPage>
    id: viewmodel_workbook

    RelativeLayout:
        MDTopAppBar:
	        size: 1, .08
	        pos_hint: {'center_x': .5, 'center_y': .96}
            elevation: 0
            left_action_items: [["menu", lambda x: root.open_menu(x)]]

        MDLabel:
            text: "Cash ExFlow"
            font_size: 20
            pos_hint: {'center_x': 1.3, 'center_y': .96}
            size_hint_y: 200

        MDBottomNavigation:
            panel_color: .2, .2, .2, 1
            size_hint: 1, .92
            text_color_normal: .8, .8, .8, .8
            enter_point: True

            MDBottomNavigationItem:
                id: generator_button
                name: 'main_screen'
                text: 'Gerador Excel'
                icon: 'book-plus'
                on_tab_press: viewmodel_workbook.on_enter_page()

