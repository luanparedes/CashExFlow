<SettingsPage>
    id: settings_viewmodel

    RelativeLayout:
        MDTopAppBar:
	        size_hint_y: .1
	        size_hint_x: 1
	        title: 'Configurações'
	        pos_hint: {'center_x': .5, 'center_y': .96}
            elevation: 0
            left_action_items: [["arrow-left", lambda x: root.navigate_to_main_screen()]]

        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {"center_x": .5, 'center_y': .82}
            size_hint: .95, .12
            padding: 16,10,16,10
            radius: 18
            md_bg_color: .3,.3,.3,.3

            MDLabel:
                text: "Caminho da pasta para pegar o arquivo: "
                font_size: 14

            MDLabel:
                text: root.folder_path
                theme_text_color: 'Custom'
                text_color: 0,0,1,1
                markup: True
                font_size: 16
                on_ref_press: root.open_file_manager()


